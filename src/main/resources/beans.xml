<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor" >
        <property name="name" value="Vicky Kaushal"></property>
        <property name="gender" value="Male"></property>
        <property name="age" value="30"></property>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor" >
        <constructor-arg name="name"  value="Deepika Padukone"></constructor-arg>
        <constructor-arg name="gender" value="Female"></constructor-arg>
        <constructor-arg name="age" value="33"></constructor-arg>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor" >
        <constructor-arg index="0"  value="Ranveer Singh"></constructor-arg>
        <constructor-arg index="1" value="Male"></constructor-arg>
        <constructor-arg index="2" value="33"></constructor-arg>
    </bean>

    <bean id="actor4" class="com.stackroute.domain.Actor" >
        <constructor-arg type="String" value="Alia Bhatt"></constructor-arg>
        <constructor-arg type="String" value="Female"></constructor-arg>
        <constructor-arg type="int" value="25"></constructor-arg>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie" >
        <property name="actor" ref="actor1"></property>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" >
        <constructor-arg name="actor" ref="actor3"></constructor-arg>
    </bean>

    <bean id="movie4" class="com.stackroute.domain.Movie" >
        <constructor-arg name="actor" ref="actor4"></constructor-arg>
    </bean>


</beans>
